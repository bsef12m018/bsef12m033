@model List<projEAD.Models.Dress>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Walima Dresses - Shop Your Wedding Jora Online";
}


   
<div class="container">
<h3>Walima Dresses</h3>	
  @for(int j = 0 ; j < ViewBag.count; j++)
    {
        <ul class="col-lg-3 list-group text-nowrap" style="list-style-type:none">	
