            {
                <button class="center-block btn-danger" style="height:40px;width:100px"> Sold </button>
            }
            else
            {
              Session["proId"] = ViewBag.x[j].Id;
                Session["Price"] = ViewBag.x[j].Price;
                <button class="center-block btn-success" onclick="window.location = '/Home/cartsave2/@ViewBag.x[j].Id;'" id="@ViewBag.x[j].Id;" style="height:40px;width:100px"> Add to cart </button>
            }

        </li>
        </ul>
    }
          @if (HttpContext.Current.Session["login"] == null && HttpContext.Current.Session["check"] == "12" )
